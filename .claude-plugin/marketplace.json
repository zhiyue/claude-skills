{
  "name": "zhiyue-claude-skills",
  "owner": {
    "name": "zhiyue"
  },
  "metadata": {
    "description": "A collection of Claude Code skills for development workflows",
    "version": "1.0.0"
  },
  "plugins": [
    {
      "name": "gitlab-mr-review",
      "description": "GitLab MR code review skill - auto checkout, deep review, and post inline comments via GitLab MCP",
      "source": "./",
      "strict": false,
      "skills": [
        "./skills/gitlab-mr-review"
      ],
      "mcpServers": {
        "gitlab": {
          "command": "npx",
          "args": [
            "-y",
            "@zereight/mcp-gitlab"
          ],
          "env": {
            "GITLAB_PERSONAL_ACCESS_TOKEN": "${GITLAB_PERSONAL_ACCESS_TOKEN}",
            "GITLAB_API_URL": "${GITLAB_API_URL}",
            "GITLAB_READ_ONLY_MODE": "false",
            "USE_GITLAB_WIKI": "false",
            "USE_MILESTONE": "false",
            "USE_PIPELINE": "false"
          }
        }
      }
    }
  ]
}
